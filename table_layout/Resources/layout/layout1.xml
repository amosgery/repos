<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:background="@drawable/back1"
    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:textColor="#ababab"
        android:text="My Gallery" 
        />
      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <Button
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:id="@+id/btn1"
            android:text="line 1"
            />
        <Button
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:id="@+id/btn2"
            android:text="line 2"
            />

        <Button
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:id="@+id/btn3"
            android:text="line 3"
            />

    </LinearLayout>
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="120dp"
        android:id="@+id/row1"
        android:visibility="invisible"
        >
        <ImageView
            android:layout_width="30sp"
            android:layout_height="30sp"
            android:background="@drawable/astro1"
            android:layout_margin="10dp"
            />
        <ImageView
            android:layout_width="30sp"
            android:layout_height="30sp"
            android:background="@drawable/astro2"
            android:layout_margin="10dp"
            />
        <ImageView
            android:layout_width="30sp"
            android:layout_height="30sp"
           android:background="@drawable/astro3"
            android:layout_margin="10dp"
            />
    </TableRow>
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:id="@+id/row2"
        android:visibility="invisible"
        >
        <ImageView
            android:layout_width="30sp"
            android:layout_height="30sp"
            android:background="@drawable/astro4"
            android:layout_margin="10dp"
          />
        <ImageView
            android:layout_width="30sp"
            android:layout_height="30sp"
            android:background="@drawable/astro5"
            android:layout_margin="10dp"
           />
        <ImageView
            android:layout_width="30sp"
            android:layout_height="30sp"
            android:background="@drawable/astro6"
            android:layout_margin="10dp"
            />
    </TableRow>
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:id="@+id/row3"
        android:visibility="invisible"
        >
        <ImageView
            android:layout_width="30sp"
            android:layout_height="30sp"
            android:background="@drawable/astro7"
            android:layout_margin="10dp"
            />
        <ImageView
            android:layout_width="30sp"
            android:layout_height="30sp"
            android:background="@drawable/astro8"
            android:layout_margin="10dp"
            />
        <ImageView
            android:layout_width="30sp"
            android:layout_height="30sp"
            android:background="@drawable/astro9"
            android:layout_margin="10dp"
            />
    </TableRow>
</TableLayout>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
   android:layout_height="match_parent"
   android:orientation="vertical"
   android:background="#15d9d9"
    >
<TextView
   android:layout_width="match_parent"
   android:layout_height="50dp"
   android:background="#565956"
   android:text="0"
   android:id="@+id/tvDisplay"
   android:textColor="#fff"
   android:textSize="30sp"
   />

<LinearLayout
   android:orientation="horizontal"
   android:layout_width="match_parent"
   android:layout_height="wrap_content"
   android:id="@+id/line1"
   android:weightSum="100">

   <Button
       android:layout_width="50dp"
       android:layout_height="60dp"
       android:text="7"
       android:textColor="#fff"
       android:textSize="30sp"
       android:gravity="center"
       android:padding="2dp"
       android:background="@android:drawable/screen_background_dark"
       android:focusable="false"
       android:longClickable="false"
       android:layout_weight="25"
       android:onClick="onClick"
       />
   <View
       android:layout_width="2dp"
       android:layout_height="2dp"
       android:background="@android:color/black" />
   <Button
       android:layout_width="50dp"
       android:layout_height="60dp"
       android:text="8"
       android:textColor="#fff"
       android:textSize="30sp"
       android:gravity="center"
       android:padding="2dp"
       android:background="@android:drawable/screen_background_dark"
       android:layout_weight="25"
       android:onClick="onClick"
       />
   <View
       android:layout_width="2dp"
       android:layout_height="2dp"
       android:background="@android:color/black" />
   <Button
       android:layout_width="50dp"
       android:layout_height="60dp"
       android:text="9"
       android:textColor="#fff"
       android:textSize="30sp"
       android:gravity="center"
       android:padding="2dp"
       android:background="@android:drawable/screen_background_dark"
       android:layout_weight="25"
       android:onClick="onClick"
       />
   <View
       android:layout_width="2dp"
       android:layout_height="2dp"
       android:background="@android:color/black" />
   <Button
       android:layout_width="50dp"
       android:layout_height="60dp"
       android:text="AC"
       android:textColor="#000"
       android:textSize="30sp"
       android:gravity="center"
       android:padding="2dp"
       android:background="#ef5508"
       android:layout_weight="25"
       android:onClick="onClick"
       />
</LinearLayout>
   <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:id="@+id/line2"
      android:orientation="horizontal"
      android:weightSum="100">

       <Button
           android:layout_width="50dp"
           android:layout_height="60dp"
           android:text="4"
           android:textColor="#fff"
           android:textSize="30sp"
           android:gravity="center"
           android:padding="2dp"
           android:background="@android:drawable/screen_background_dark"
           android:focusable="false"
           android:longClickable="false"
           android:layout_weight="25"
           android:onClick="onClick"
           />
       <View
           android:layout_width="2dp"
           android:layout_height="2dp"
           android:background="@android:color/black" />
 
       <Button
           android:layout_width="50dp"
           android:layout_height="60dp"
           android:text="5"
           android:textColor="#fff"
           android:textSize="30sp"
           android:gravity="center"
           android:padding="2dp"
           android:background="@android:drawable/screen_background_dark"
           android:layout_weight="25"
           android:onClick="onClick"
           />
       <View
           android:layout_width="2dp"
           android:layout_height="2dp"
           android:background="@android:color/black" />
       <Button
           android:layout_width="50dp"
           android:layout_height="60dp"
           android:text="6"
           android:textColor="#fff"
           android:textSize="30sp"
           android:gravity="center"
           android:padding="2dp"
           android:background="@android:drawable/screen_background_dark"
           android:layout_weight="25"
           android:onClick="onClick"
           />
       <View
           android:layout_width="2dp"
           android:layout_height="2dp"
           android:background="@android:color/black" />
       <Button
           android:layout_width="50dp"
           android:layout_height="60dp"
           android:text="*"
           android:textColor="#000"
           android:textSize="30sp"
           android:gravity="center"
           android:padding="2dp"
           android:background="#ef5508"
           android:layout_weight="25"
           android:onClick="onClick"
           />
   </LinearLayout>
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:id="@+id/line3"
       android:orientation="horizontal"
       android:weightSum="100" 
       >
       <Button
           android:layout_width="50dp"
           android:layout_height="60dp"
           android:text="1"
           android:textColor="#fff"
           android:textSize="30sp"
           android:gravity="center"
           android:padding="2dp"
           android:background="@android:drawable/screen_background_dark"
           android:focusable="false"
           android:longClickable="false"
           android:layout_weight="25"
           android:onClick="onClick"
           />
       <View
           android:layout_width="2dp"
           android:layout_height="2dp"
           android:background="@android:color/black" />
       <Button
           android:layout_width="50dp"
           android:layout_height="60dp"
           android:text="2"
           android:textColor="#fff"
           android:textSize="30sp"
           android:gravity="center"
           android:padding="2dp"
           android:background="@android:drawable/screen_background_dark"
           android:layout_weight="25"
           android:onClick="onClick"
           />
       <View
           android:layout_width="2dp"
           android:layout_height="2dp"
           android:background="@android:color/black" />
 
       <Button
           android:layout_width="50dp"
           android:layout_height="60dp"
           android:text="3"
           android:textColor="#fff"
           android:textSize="30sp"
           android:gravity="center"
           android:padding="2dp"
           android:background="@android:drawable/screen_background_dark"
           android:layout_weight="25"
           android:onClick="onClick"
           />
       <View
           android:layout_width="2dp"
           android:layout_height="2dp"
           android:background="@android:color/black" />
       <Button
           android:layout_width="50dp"
           android:layout_height="60dp"
           android:text="+"
           android:textColor="#000"
           android:textSize="30sp"
           android:gravity="center"
           android:padding="2dp"
           android:background="#ef5508"
           android:layout_weight="25"
           android:onClick="onClick"

          />
   </LinearLayout>
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:id="@+id/line4"
       android:orientation="horizontal"
       android:weightSum="100"
        >
       <Button
           android:layout_width="50dp"
           android:layout_height="60dp"
           android:text="0"
           android:textColor="#fff"
           android:textSize="30sp"
           android:gravity="center"
           android:padding="2dp"
           android:background="@android:drawable/screen_background_dark"
           android:focusable="false"
           android:longClickable="false"
           android:layout_weight="25"
           android:onClick="onClick"
           />
       <View
           android:layout_width="2dp"
           android:layout_height="2dp"
           android:background="@android:color/black" />

       <Button
           android:layout_width="50dp"
           android:layout_height="60dp"
           android:text="."
           android:textColor="#fff"
           android:textSize="30sp"
           android:gravity="center"
           android:padding="2dp"
           android:background="@android:drawable/screen_background_dark"
           android:layout_weight="25"
           android:onClick="onClick"
       />
       <View
           android:layout_width="2dp"
           android:layout_height="2dp"
           android:background="@android:color/black" />
       <Button
           android:layout_width="50dp"
           android:layout_height="60dp"
           android:text="="
           android:textColor="#fff"
           android:textSize="30sp"
           android:gravity="center"
           android:padding="2dp"
           android:background="@android:drawable/screen_background_dark"
           android:layout_weight="25"
           android:onClick="onClick"
           />
       <View
           android:layout_width="2dp"
           android:layout_height="2dp"
           android:background="@android:color/black" />
       <Button
           android:layout_width="50dp"
           android:layout_height="60dp"
           android:text="/"
           android:textColor="#000"
           android:textSize="30sp"
           android:gravity="center"
           android:padding="2dp"
           android:background="#ef5508"
           android:layout_weight="25"
           android:onClick="onClick"
           />
   </LinearLayout>
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:id="@+id/line5"
       android:weightSum="100"
       android:orientation="horizontal">
       <Button
           android:layout_width="50dp"
           android:layout_height="60dp"
           android:text="TAN"
           android:textColor="#fff"
           android:textSize="25sp"
           android:gravity="center"
           android:padding="2dp"
           android:background="@android:drawable/screen_background_dark"
           android:focusable="false"
           android:longClickable="false"
           android:layout_weight="25"
           android:onClick="onClick"
           />
       <View
           android:layout_width="2dp"
           android:layout_height="2dp"
           android:background="@android:color/black" />
       <Button
           android:layout_width="50dp"
           android:layout_height="60dp"
           android:text="COS"
           android:textColor="#fff"
           android:textSize="25sp"
           android:gravity="center"
           android:padding="2dp"
           android:background="@android:drawable/screen_background_dark"
           android:layout_weight="25"
          android:onClick="onClick"
          />
       <View
           android:layout_width="2dp"
           android:layout_height="2dp"
           android:background="@android:color/black" />
       <Button
           android:layout_width="50dp"
           android:layout_height="60dp"
           android:text="SIN"
           android:textColor="#fff"
           android:textSize="25sp"
           android:gravity="center"
           android:padding="2dp"
           android:background="@android:drawable/screen_background_dark"
           android:layout_weight="25"
           android:onClick="onClick"
           />
       <View
           android:layout_width="2dp"
           android:layout_height="2dp"
           android:background="@android:color/black" />
       <Button
           android:layout_width="50dp"
           android:layout_height="60dp"
           android:text="-"
           android:textColor="#000"
           android:textSize="25sp"
           android:gravity="center"
           android:padding="2dp"
           android:background="#ef5508"
           android:layout_weight="25"
           android:onClick="onClick"
           />
   </LinearLayout>
   <View
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:background="@android:color/black" />

</LinearLayout>

